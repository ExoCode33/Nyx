# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Google Safe Browsing API
SAFE_BROWSING_API_KEY=your_google_api_key_here

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Scanner Configuration
REDIRECT_TIMEOUT_MS=5000
REDIRECT_MAX_HOPS=10
DOMAIN_AGE_THRESHOLD_DAYS=30
WHOIS_CACHE_TTL_HOURS=24

# Heuristic Scoring Thresholds
HEURISTIC_WARN_THRESHOLD=25
HEURISTIC_QUARANTINE_THRESHOLD=50
HEURISTIC_DELETE_THRESHOLD=75

# Rate Limiting
RATE_LIMIT_MAX_LINKS=5
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_CLEANUP_INTERVAL_MS=300000

# Enforcement
WARN_MESSAGE_TTL_MS=300000
SAFE_BROWSING_CACHE_TTL_SECONDS=3600

# Performance
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Feature Flags
ENABLE_SAFE_BROWSING=true
ENABLE_WHOIS_LOOKUP=true
ENABLE_REDIRECT_RESOLUTION=true
ENABLE_HEURISTIC_SCANNING=true
